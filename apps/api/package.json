{
  "name": "@fetch/api",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "deploy": "node scripts/migrate-deploy.js && pnpm start",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:deploy": "prisma migrate deploy",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "import-petfinder": "tsx src/scripts/import-petfinder.ts",
    "scripts:migrate-deploy": "node scripts/migrate-deploy.js",
    "test": "echo 'No tests specified' && exit 0",
    "test:watch": "echo 'No tests specified' && exit 0",
    "postinstall": "pnpm run db:generate"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fetch/shared": "workspace:*",
    "@prisma/client": "^6.8.2",
    "@types/mongodb": "^4.0.7",
    "argon2": "^0.43.0",
    "basic-ftp": "^5.0.5",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.3",
    "lucia": "^3.2.2",
    "mongodb": "^6.17.0",
    "prisma": "^6.8.2"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "nodemon": "^3.1.10",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=24.1.0"
  }
}
